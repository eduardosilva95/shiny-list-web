<!-- Login Modal -->
<div class="modal fade" id="login-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 400px;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: red;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" id="need-login-error" role="alert" style="display: none;">
                    <i class="fas fa-times-circle"></i><span style="padding-left: 10px;">You need to be logged in to do this action.</span>
                </div>

                <div id="customBtn">
                    <button class="btn btn-google" onclick="googleLogin()"><img id="google-signin-icon" src="img/google-icon.png"><span style="padding-left: 10px">Log in using Google</span></button>
                </div>

            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>