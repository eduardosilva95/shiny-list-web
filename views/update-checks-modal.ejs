<div id="update-checks-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update number of checks: </h5>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div id="start-seen-error" class="alert alert-danger" role="alert" style="display: none;">
                        <i class="fas fa-times-circle"></i><span style="padding-left: 10px">Wrong number format!</span>
                    </div>

                    <input name="pokemon" id="pokemon-id-hidden-input" style="display: none;">
                    <label for="start-seen-input">Number of Seen Before Shiny Release</label>
                    <input type="number" class="form-control" name="startSeen" id="start-seen-input" placeholder="Enter number of seen before shiny release" min="0">
                </div>

                <div class="form-group">
                    <div id="current-seen-error" class="alert alert-danger" role="alert" style="display: none;">
                        <i class="fas fa-times-circle"></i><span style="padding-left: 10px">Wrong number format!</span>
                    </div>

                    <label for="current-seen-input">Number of Current Seen</label>
                    <input type="number" class="form-control" name="currentSeen" id="current-seen-input" placeholder="Enter number of current seen" min="0">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button id="submit-checks-form" type="button" class="btn btn-success">Confirm</button>
            </div>
        </div>
    </div>
</div>