<div class="modal fade" id="profile-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 400px;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: red;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="profile-pic-img-div text-center">
                <img id="profile-pic-img" class="text-center">
            </div>
            <div class="modal-body">
                <div class="profile-info-div">
                    <p><strong>Name: </strong><span id="profile-name"></span></p>
                    <p><strong>Nickname: </strong><span id="profile-nickname-span"></span>
                        <input class="form-control" id="profile-nickname-input" style="display: none; height: 27px; width:unset">
                    </p>
                    <p><strong>Member since: </strong><span id="profile-start-date"></span></p>
                    <p><strong>Pok√©mon Caught: </strong><span id="profile-pokemon-caught-span"></span>
                        <input class="form-control" id="profile-pokemon-caught-input" style="display: none; height: 27px; width:unset">
                    </p>
                </div>

                <div class="text-right">
                    <button id="profile-modal-edit-btn" class="btn btn-warning" style="border-radius: 50%;color: white;"><i class="fas fa-pen"></i></button>
                </div>

                
            </div>
            <div class="modal-footer">
                <button id="profile-modal-cancel-btn" class="btn btn-danger" style="display: none;color: white;"><i class="fas fa-times-circle"></i><span style="padding-left:10px">Cancel</i></button>
                <button id="profile-modal-save-btn" class="btn btn-warning" style="display: none;color: white;"><i class="fas fa-save"></i><span style="padding-left:10px">Save</i></button>
            </div>
        </div>
    </div>
</div>